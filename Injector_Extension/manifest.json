{
  "manifest_version": 3,
  "name": "Script Injector",
  "version": "1.0",
  "description": "Inject custom SDK script with configurable parameters",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Script Injector"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}